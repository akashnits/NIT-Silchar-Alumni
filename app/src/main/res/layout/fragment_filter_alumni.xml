<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.akash.android.nitsilcharalumni.ui.alumni.FilterAlumniFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cvFilterAlumni"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentPadding="4dp"
        app:cardElevation="8dp"
        android:layout_margin="4dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        app:srcCompat="@drawable/ic_close_black"
                        android:contentDescription="@string/close"/>

                    <TextView
                        android:id="@+id/tvFilters"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/filters"
                        android:gravity="center_vertical"
                        android:layout_marginStart="90dp"
                        android:padding="4dp"
                        android:textSize="24sp"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btFilterClassOf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    android:text="@string/class_of"
                    android:background="@drawable/filter_btn_backgrnd_unpressed"/>

                <Button
                    android:id="@+id/btFilterLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:padding="4dp"
                    android:text="@string/location"
                    android:background="@drawable/filter_btn_backgrnd_unpressed"/>

                <Button
                    android:id="@+id/btFilterApply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="328dp"
                    android:text="@string/apply"
                    android:textColor="@android:color/black"
                    android:background="@drawable/filter_btn_backgrnd_unpressed"/>
            </LinearLayout>


        </ScrollView>
    </android.support.v7.widget.CardView>

</FrameLayout>