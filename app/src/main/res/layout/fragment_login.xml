<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anonymousmask"
    tools:context="com.akash.android.nitsilcharalumni.ui.LoginFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        app:hintEnabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="236dp"
            android:layout_height="32dp"
            android:hint=" Enter your email"
            android:textColor="@android:color/black"
            android:background="@color/cardview_light_background"
            android:inputType="textEmailAddress"
            android:textColorLink="@android:color/darker_gray" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        android:layout_below="@+id/tilEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="236dp"
            android:layout_height="32dp"
            android:hint=" Password"
            android:inputType="textPassword"
            android:layout_below="@+id/tilEmail"
            android:layout_toRightOf="@+id/tvEmail"
            android:layout_toEndOf="@+id/tvEmail"
            android:textColor="@android:color/black"
            android:background="@color/cardview_light_background"
            android:textColorLink="@android:color/darker_gray" />
    </android.support.design.widget.TextInputLayout>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/tvOR"
        android:layout_alignRight="@+id/tvOR"
        android:layout_alignEnd="@+id/tvOR" />

    <TextView
        android:id="@+id/tvForgetPassword"
        android:text="Forget Password? "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btSignIn"
        android:layout_alignLeft="@+id/btSignIn"
        android:layout_alignStart="@+id/btSignIn" />


    <Button
        android:id="@+id/btSignIn"
        android:text="Sign In"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:background="@color/common_google_signin_btn_text_light_focused"
        android:textAppearance="@style/TextAppearance.AppCompat"
        style="@style/com_facebook_button"
        tools:style="@style/Widget.AppCompat.Button"
        android:textColorHint="@drawable/com_facebook_button_login_silver_background"
        android:textColorLink="@android:color/white"
        android:layout_below="@+id/tilPassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvEmail"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/tilEmail"
        android:layout_alignLeft="@+id/tvPassword"
        android:layout_alignStart="@+id/tvPassword" />

    <TextView
        android:id="@+id/tvPassword"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@+id/tilPassword"
        android:layout_toLeftOf="@+id/tilPassword"
        android:layout_toStartOf="@+id/tilPassword" />

    <TextView
        android:id="@+id/tvOR"
        android:text="OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_below="@+id/tvForgetPassword"
        android:layout_alignLeft="@+id/tilPassword"
        android:layout_alignStart="@+id/tilPassword" />


</RelativeLayout>
