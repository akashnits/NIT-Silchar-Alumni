<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.akash.android.nitsilcharalumni.signup.social.SocialLoginFragment">

    <ScrollView
        android:id="@+id/socialLoginFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signup"
        >

        <LinearLayout
            android:id="@+id/linear_layout_social_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="0dp"
            >


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rgSocialMaleFemale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@android:color/black"
                    />

                <RadioButton
                    android:id="@+id/radioSocialButtonMale"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="100dp"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Male"
                    android:textColor="@android:color/black"
                    />

                <RadioButton
                    android:id="@+id/radioSocialButtonFemale"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@color/colorPrimary"
                    android:text="Female"
                    android:textColor="@android:color/black" />
            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSocialTypeOfUser"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="2dp"
                    android:text="Type of user"
                    android:textColor="@android:color/black"
                    />

                <Spinner
                    android:id="@+id/socialSpinner"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:popupBackground="@color/cardview_light_background"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <Button
                android:id="@+id/validateSocialForm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/round_cornors_green"
                android:text="Next"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
