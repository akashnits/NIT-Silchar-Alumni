<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akash.android.nitsilcharalumni.ui.fragments.AlumniSignUpFragment">


    <TextView
        android:id="@+id/classOf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Class of"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintVertical_bias="0.382" />

    <Spinner
        android:id="@+id/spinnerClassOf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:popupBackground="@color/cardview_light_background"
        android:spinnerMode="dialog"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/classOf"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/classOf"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/classOf"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.272"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/tvOrganisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organisation"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:theme="@style/TextLabel"
        tools:layout_editor_absoluteY="252dp"
        tools:layout_editor_absoluteX="170dp">

        <EditText
            android:id="@+id/etOrganisation"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/color_cursor"
            />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>
